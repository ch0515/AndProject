<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="And 은행 인터넷 뱅킹"
        android:textSize="30dp"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="계좌번호 000-111-2222"
        android:textSize="20dp"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button android:id="@+id/btn_1"
            android:layout_marginLeft="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFEB3B"
            android:text="잔액"/>
        <Button android:id="@+id/btn_2"
            android:backgroundTint="#C3BFA2"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="입금"/>
        <Button android:id="@+id/btn_3"
            android:backgroundTint="#C3BFA2"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="출금"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#B3DEEC"
            >
            <TextView android:layout_marginLeft="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="통장이름 : 홍길동"
                android:textSize="40dp"/>
            <TextView android:id="@+id/view1_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10000"
                android:textSize="40dp"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="invisible"
            android:background="#B3DEEC">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="입금 금액 : "
                android:textSize="30dp"/>
            <EditText android:id="@+id/view2_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="금액을 입금하세요"
                android:inputType="numberDecimal"/>
            <Button android:id="@+id/view2_btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="입금"
                android:textSize="30dp"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="invisible"
            android:background="#B3DEEC">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="출금 금액 : "
                android:textSize="30dp"/>
            <EditText android:id="@+id/view3_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="금액을 출금하세요"
                android:inputType="numberDecimal"/>
            <Button android:id="@+id/view3_btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="출금"
                android:textSize="30dp"/>
        </LinearLayout>
    </FrameLayout>



</LinearLayout>