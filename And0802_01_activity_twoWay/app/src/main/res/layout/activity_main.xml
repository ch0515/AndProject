<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <EditText android:id="@+id/edtnum_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:inputType="numberDecimal"
        android:hint="정수 값"/>
    <EditText android:id="@+id/edtnum_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:hint="정수 값"
        android:inputType="numberDecimal"/>
    <RadioGroup android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton android:id="@+id/rabtn_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="더하기"
            android:textSize="20dp"/>
        <RadioButton android:id="@+id/rabtn_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="빼기"
            android:textSize="20dp"/>
        <RadioButton android:id="@+id/rabtn_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="곱하기"
            android:textSize="20dp"/>
        <RadioButton android:id="@+id/rabtn_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="나누기"
            android:textSize="20dp"/>

    </RadioGroup>
    <Button android:id="@+id/btn_sum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="더하기"
        android:textSize="20sp" />
</LinearLayout>